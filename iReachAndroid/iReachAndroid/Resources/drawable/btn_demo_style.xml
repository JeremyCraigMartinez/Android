<selector xmlns:android = "http://schemas.android.com/apk/res/android">
	<item android:state_pressed = "false">

		<layer-list>
			<item android:right = "5dp" android:top = "5dp">
				<shape>
					<corners android:radius = "2dp" />
					<solid android:color = "#D3D3D3"/>
				</shape>
			</item>


			<item android:bottom = "2dp" android:left = "2dp">
				<shape>
					<gradient android:angle = "270" android:endColor = "#96DEDA" android:startColor = "#50C9C3"/>
					<stroke android:width = "1dp" android:color = "#FBD3E9"/>
					<corners android:radius = "4dp"/>
					<padding android:left = "10dp" android:right = "10dp" android:top = "10dp" />
				</shape>
			</item>
		</layer-list>
	</item>

	<item android:state_pressed = "true">

		<layer-list>
			<item android:right = "5dp" android:top = "5dp">
				<shape>
					<corners android:radius = "2dp" />
					<solid android:color = "#606c88"/>
				</shape>
			</item>


			<item android:bottom = "2dp" android:left = "2dp">
				<shape>
					<gradient android:angle = "270" android:endColor = "#182848" android:startColor = "#4b6cb7"/>
					<stroke android:width = "1dp" android:color = "#ff5858"/>
					<corners android:radius = "4dp"/>
					<padding android:left = "10dp" android:right = "10dp" android:top = "10dp" />
				</shape>
			</item>
		</layer-list>
	</item>


</selector>